if	[[ $(get_key man_style) == mostlike ]]; then \
	dbg_msg BashStyle-NG Setting: Terminfo Mostlike
	alias man="TERMINFO=$BSNG_PREFIX/share/bashstyle-ng/terminfo TERM=mostlike LESS=C PAGER=less man"
elif	[[ $(get_key man_style) ==  bold ]]; then \
	dbg_msg BashStyle-NG Setting: Terminfo Bold
	alias man="TERMINFO=$BSNG_PREFIX/share/bashstyle-ng/terminfo TERM=bold LESS=C PAGER=less man"
elif	[[ $(get_key man_style) == nebula ]]; then \
	dbg_msg BashStyle-NG Setting: Terminfo Nebula
	alias man="TERMINFO=$BSNG_PREFIX/share/bashstyle-ng/terminfo TERM=nebula LESS=C PAGER=less man"
fi
