#!/usr/bin/make -f

export DH_VERBOSE = 1
export DISABLE_POSTINSTALL = 1

%:
	dh $@

override_dh_auto_clean:
	dh_testdir
	-make clean

override_dh_auto_configure:
	dh_testdir
	./configure --prefix=/usr --maintainer

override_dh_install:
	dh_testdir
	dh_testroot
	dh_installdirs
	DESTDIR=$(CURDIR)/debian/bashstyle-ng/ make install
