case ${1} in

	--help | -h | "")
		bsng-help -a "Christopher Roy Bratusek" -e "nano@jpberlin.de" -h "http://www.nanolx.org/"\
			-l "GNU GPL v3" -n "fah2cel" -s "convert 째F to 째C" -v "${BSNG_VERSION}" -y "${BSNG_YEAR}"\
			-o "number:|convert 째F to 째C"
	;;

	*)
		echo "scale=2 ; ( $1 - 32  ) / 1.8" | bc
	;;

esac
