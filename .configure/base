#!/bin/bash

export xVERSION=7.12
CODENAME="Planetary Collapse"

ERR_MSG=""

export OLDPATH=$PATH
export PATH="$PATH:/sbin:/usr/sbin:/usr/local/sbin"

export_result ()
{

	RES=$PWD/.configure/results

	if [[ -e $RES ]]; then
		rm $RES
	fi

	echo MODE=\"$MODE\" >> $RES
	echo PREFIX=\"$PREFIX\" >> $RES
	echo DATADIR=\"$PREFIX/share/bashstyle-ng/\" >> $RES
	echo DATADIR_LIST=\"\( ascii bin dirinfo functions internal settings styles wizard \)\" >> $RES
	echo PROFILEDIR=\"/etc/profile.d/\" >> $RES
	echo BINDIR=\"$PREFIX/bin\" >> $RES
	echo BINDIR_FILES=\"\( bashstyle \)\" >> $RES
	echo LOCALEDIR=\"$PREFIX/share/locale/\" >> $RES
	echo LOCALEDIR_LIST=\"\( de es it ru \)\" >> $RES
	echo ICONDIR=\"/usr/icons/hicolor/32x32/\" >> $RES
	echo ICONDIR_FILES=\"\( bs-ng-advanced bs-ng-alias bs-ng-custom bs-ng-extra \
		bs-ng-help bs-ng-info bs-ng-nano bs-ng bs-ng-profile bs-ng-readline \
		bs-ng-style bs-ng-toolbox bs-ng-vim bs-ng-xterm \)\" >> $RES
	echo DIRINFO_ENABLE=\"$DIRINFO_ENABLE\" >> $RES
	echo MISSING=\"\( $MISSING \)\" >> $RES

}
