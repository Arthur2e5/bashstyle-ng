case ${1} in

	--help | -h)
		bsng-help -a "Christopher Roy Bratusek" -e "nano@jpberlin.de" -h "http://www.nanolx.org/"\
			-l "GNU GPL v3" -n "cel2fah" -s "convert 째C to 째F" -v "${BSNG_VERSION}" -y "${BSNG_YEAR}"\
			-o "number:|convert 째C to 째F"
	;;

	* )
		echo "scale=2; $1 * 1.8  + 32" | bc
	;;
esac
