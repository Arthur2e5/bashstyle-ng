case ${1} in

	--help | -h | "")

		bsng-help -a "Christopher Roy Bratusek" -e "nano@jpberlin.de" -h "http://www.nanolx.org/"\
			-l "GNU GPL v3" -n "asc2b32" -s "convert ascii char to base32 equivalent" -v "${BSNG_VERSION}" -y "${BSNG_YEAR}"\
			-o "letter:|convert ascii char to base32 equivalent"

	;;

	* )
		echo "obase=32 ; $(asc2dec $1)" | bc
	;;
esac
