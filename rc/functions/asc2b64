case ${1} in

	--help | -h | "")

		bsng-help -a "Christopher Roy Bratusek" -e "nano@jpberlin.de" -h "http://www.nanolx.org/"\
			-l "GNU GPL v3" -n "asc2b64" -s "convert ascii char to base64 equivalent" -v "${BSNG_VERSION}" -y "2013"\
			-o "letter:|convert ascii char to base64 equivalent"

	;;

	* )
		echo "obase=64 ; $(asc2dec $1)" | bc
	;;
esac