MODULES=( create date display index )

for mod in ${MODULES[@]}; do
	source $BSNG_RC_DIR/dirinfo/$mod
done

case $1 in

	*help | "")
		dirinfo_index --help
	;;

	*create)
		dirinfo_create
	;;

	*)
		dirinfo_index "$@"
	;;

esac
