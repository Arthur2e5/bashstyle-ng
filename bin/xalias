#########################################################

alias=$1
shift

[[ $(grep -w "alias $alias" $HOME/.bashstyle.custom) != "" ]] &&
	{ sed -e "/alias $alias/d" -i $HOME/.bashstyle.custom ; }

alias $alias='$@'
echo "alias $alias=\"$@\"" >> $HOME/.bashstyle.custom
