ini_get ()
{

	sed -n "s/^${1} = \(.*$\)/\1/p" $HOME/.bs-ng.ini | sed -e 's/\"//g'

}

def_get ()
{

	sed -n "s/^${1} = \(.*$\)/\1/p" $BSNG_DATA_DIR/bashstyle-ng/bs-ng.ini | sed -e 's/\"//g'

}

ini_set ()
{

	SETTING=${1}
	shift
	VALUE=${@}

	sed -e "s/^${SETTING} = .*$/${SETTING} = ${VALUE}/" -i $HOME/bs-ng.ini

}

ini_add ()
{

	SECTION=${1}
	shift
	VALUE=${@}

	sed -e "/\[${SECTION}\]/ a ${VALUE}" $HOME/.bs-ng.ini

}

rc_add ()
{

	echo "$@" >> $RC_FILE

}
