case ${1} in

	--help | -h | "")
		bsng-help -a "Christopher Roy Bratusek" -e "nano@jpberlin.de" -h "http://www.nanolx.org/"\
			-l "GNU GPL v3" -n "dec2bin" -s "convert decimal to binary" -v "${BSNG_VERSION}" -y "${BSNG_YEAR}"\
			-o "number:|convert number to binary"
	;;

	*)
		echo "obase=2 ; $1" | bc
	;;

esac
