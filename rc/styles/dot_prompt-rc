export pstyle_supported=true

if [[ $enabcol == true ]]; then

PS1="\n$pscolor.:$sepacolor[ $usercolor\u$pscolor @ $hostcolor\h$sepacolor ]$pscolor:. .:$sepacolor[ $wdircolor\$(trunc_pwd)$sepacolor ]$pscolor:.\n.:$sepacolor[·>$fontcolor "

else

PS1="\n.:[ \u @ \h ]:. .:[ \$(trunc_pwd) ]:.\n.:[·> "

fi
