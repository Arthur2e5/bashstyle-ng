#!/bin/bash
#########################################################
#                                                       #
# This is BashStyle-NG                                  #
#                                                       #
# Licensed under GNU GENERAL PUBLIC LICENSE v3          #
#                                                       #
# Copyright 2007 - 2010 Christopher Bratusek            #
#                                                       #
#########################################################

export BSNG_RC_GEN=true
export RC_FILE=$HOME/bashstyle/nano-rc.bs-ng-$CURRENT_DATE

source $BSNG_RC_DIR/internal/gconf
source $BSNG_RC_DIR/internal/misc
source $BSNG_RC_DIR/internal/logging

if [[ ! -e $HOME/bashstyle ]]; then
	mkdir -p $HOME/bashstyle
fi

rc_add \# This config file was generated by BashStyle-NG $BSNG_VERSION
rc_add \# at $CURRENT_DATE use as \$HOME/.nanorc to apply settings

. $BSNG_PREFIX/share/bashstyle-ng/rc/settings/nano-rc

unset RC_FILE BSNG_RC_GEN
